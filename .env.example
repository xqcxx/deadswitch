# DeadSwitch Environment Configuration
# Copy this file to .env.local and fill in your values

# ==========================================
# Network Configuration
# ==========================================
# Options: testnet, mainnet
NEXT_PUBLIC_STACKS_NETWORK=testnet

# ==========================================
# Contract Addresses
# ==========================================
# These are filled in after contract deployment
# Leave empty for local development

# Testnet Example:
# NEXT_PUBLIC_CONTRACT_ADDRESS=ST1PQHQKV0RJXZFY1DGX8MNSNYVE3VGZJSRTPGZGM

# Mainnet Example:
# NEXT_PUBLIC_CONTRACT_ADDRESS=SP2PABAF9FTAJYNFZH93XENAJ8FVY99RRM50D2JG9

NEXT_PUBLIC_CONTRACT_ADDRESS=

# ==========================================
# Contract Names
# ==========================================
# These should match the contract names in Clarinet.toml
HEARTBEAT_CORE_CONTRACT=heartbeat-core
VAULT_CONTRACT=vault
BENEFICIARY_MGR_CONTRACT=beneficiary-mgr
GUARDIAN_NETWORK_CONTRACT=guardian-network
TRIGGER_ACTIONS_CONTRACT=trigger-actions
SWITCH_NFT_CONTRACT=switch-nft

# ==========================================
# API Configuration
# ==========================================
# Optional: Custom API endpoints
# NEXT_PUBLIC_API_URL=https://api.stacks.co

# ==========================================
# Feature Flags
# ==========================================
# Enable/disable features
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_ANALYTICS_ENABLED=false

# ==========================================
# Security
# ==========================================
# Never commit these to version control!
# These are only used for deployment scripts

# Mnemonic for contract deployment (12 or 24 words)
# STACKS_MNEMONIC=word1 word2 word3 ... word12

# API keys for external services
# NEXT_PUBLIC_APP_NAME=DeadSwitch

# ==========================================
# Development
# ==========================================
# Enable hot reload and debugging
NEXT_TELEMETRY_DISABLED=1
